<%- include("includes/header.ejs") %>

    <body>
        <div class="container">
            <h1 class="text-center my-3">Post Using API</h1>
            <a href="/posts" class="btn btn-primary mb-3">View All Posts</a>
            <form class="row g-3" method="POST" action="/posts/<%= post.id %>?_method=PATCH">
                <h3>Username: @<%= post.username %></h3>
                <div class="col-md-6">
                    <label for="validationDefault03" class="form-label">Title</label>
                    <input type="text" class="form-control" name="title" id="validationDefault03"
                        placeholder="Write Your Title" value="<%= post.title %>" required>
                </div>

                <div class="col-md-12">
                    <label for="validationDefault05" class="form-label">Content</label>
                    <textarea name="content" class="form-control" id="validationDefault05" placeholder="Write Your Post"
                        required><%= post.content %></textarea>
                </div>

                <div class="col-12 d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">Update</button>
                </div>

            </form>
        </div>
    </body>

    </html>