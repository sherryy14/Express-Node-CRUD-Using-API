<%- include("includes/header.ejs") %>

  <body>
    <div class="container">
      <h1 class="text-center my-3">Create New Post</h1>
      <a href="/posts" class="btn btn-primary mb-3">View All Posts</a>
      <form class="row g-3" method="POST" action="/posts">


        <div class="col-md-6">
          <label for="validationDefaultUsername" class="form-label">Username</label>
          <div class="input-group">
            <span class="input-group-text" id="inputGroupPrepend2">@</span>
            <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Write Your Username"
              aria-describedby="inputGroupPrepend2" name="username" required>

          </div>
        </div>
        <div class="col-md-6">
          <label for="validationDefault03" class="form-label">Title</label>
          <input type="text" class="form-control" name="title" id="validationDefault03" placeholder="Write Your Title"
          required>
        </div>

        <div class="col-md-12">
          <label for="validationDefault05" class="form-label">Content</label>
          <textarea name="content" class="form-control" id="validationDefault05" placeholder="Write Your Post"
          required></textarea>
        </div>

        

        <div class="col-12 d-flex justify-content-center">
          <button class="btn btn-primary" type="submit">Create</button>
        </div>
      </form>
    </div>
  </body>

  </html>